{
    "name": "User",
    "description": "Basic form for displaying a User",
    "access": {
        "groups": ["admin"]
    },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "100%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "login",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "language",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "validated",
                                                "width": "25%"
                                            }

                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [ 
                                            {
                                                "type": "field",
                                                "label": "Identity",
                                                "value": "identity_id",
                                                "width": "100%"
                                            }, 
                                            {
                                                "type": "field",
                                                "label": "Password",
                                                "value": "password",
                                                "width": "50%"
                                            }, 
                                            {
                                                "type": "field",
                                                "label": "Organisation",
                                                "value": "organisation_id",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "Groups",
                        "id": "section.group",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "groups_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false,
                                                            "ACTION.SELECT": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Centers",
                        "id": "section.centers",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "centers_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false,
                                                            "ACTION.SELECT": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Center Offices",
                        "id": "section.center_offices",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "center_offices_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false,
                                                            "ACTION.SELECT": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },                    
                    {
                        "label": "Preferences",
                        "id": "section.preferences",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "setting_values_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false,
                                                            "ACTION.SELECT": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }                   
                ]
            }
        ]
    }
}