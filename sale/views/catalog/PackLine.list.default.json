{
    "name": "PackLines",
    "description": "This view is intended for displaying the list of packlines.",
    "access": {
        "groups": ["pos.default.user", "sale.default.user"]
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "label": "Name",
                "value": "name",
                "width": "30%"
            },
            {
                "type": "field",
                "label": "Parent Product",
                "value": "parent_product_id",
                "width": "20%"
            },
            {
                "type": "field",
                "label": "Child Product",
                "value": "child_product_id",
                "width": "20%",
                "visible": false
            },
            {
                "type": "field",
                "label": "Child Model",
                "value": "child_product_model_id",
                "width": "20%"
            },
            {
                "type": "field",
                "label": "Has Quantity",
                "value": "has_own_qty",
                "width": "15%"
            },
            {
                "type": "field",
                "label": "Product Quantity",
                "value": "own_qty",
                "width": "15%"
            },
            {
                "type": "field",
                "label": "Has Duration",
                "value": "has_own_duration",
                "width": "50%"
            },
            {
                "type": "field",
                "label": "Product Duration",
                "value": "own_duration",
                "width": "50%"
            }            
        ]
    }
}