{
    "name": "Project",
    "description": "Default form for project.",
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "id": "section.project",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Name",
                                                "value": "name",
                                                "width": "100%",
                                                "align": "left",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Product",
                                                "value": "product_id",
                                                "width": "50%",
                                                "widget": {
                                                    "autoselect": false
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "25%",
                                        "items": [
                                        ]
                                    },
                                    {
                                        "width": "25%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Sale model",
                                                "value": "time_entry_sale_model_id",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer",
                                                "value": "customer_id",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "form.inventory",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": [
                                                                {
                                                                    "view": "form.create"
                                                                }
                                                            ]
                                                        }
                                                    }
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Receivable queue",
                                                "value": "receivable_queue_id",
                                                "width": "100%",
                                                "visible": ["customer_id", "<>", null]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "Details",
                        "id": "section.details",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%",
                                                "widget": {
                                                    "usage": "text/plain"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Time entries",
                        "id": "section.time_entries",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "time_entries_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
