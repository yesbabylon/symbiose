{
    "name": "Billable time entries",
    "description": "Default listing of all time entries.",
    "controller": "timetrack_timeentry-collect",
    "order": "date",
    "sort": "desc",
    "limit": 500,
    "domain": [
        ["object_class", "=", "timetrack\\Project"],
        ["status", "=", "validated"]
    ],
    "operations": {
        "total": {
            "billable_amount": {
                "operation": "SUM",
                "usage": "amount/money:2"
            }
        }
    },
    "header": {
        "actions": {
            "ACTION.CREATE": false
        },
        "selection": {
            "default": false,
            "actions" : [
                {
                    "id": "header.selection.actions.bill",
                    "label": "Bill",
                    "icon": "receipt_long",
                    "controller": "core_model_transition",
                    "params": {
                        "entity": "timetrack\\TimeEntry",
                        "transition": "bill"
                    }
                }
            ]
        }
    },
    "extends": {
        "entity": "timetrack\\TimeEntry",
        "view": "list.default"
    },
    "layout": {
        "remove": [
            "item.status"
        ]
    }
}
