{
    "name": "Time entry",
    "description": "Default form for time entry",
    "actions": [
        {
            "id": "action.transition.ready",
            "label": "Submit",
            "controller": "model_transition",
            "params": {
                "entity": "timetrack\\TimeEntry",
                "transition": "submit",
                "ids": []
            },
            "visible": [
                ["state", "<>", "draft"],
                ["status", "=", "pending"]
            ]
        },
        {
            "id": "action.transition.validate",
            "label": "Validate",
            "controller": "model_transition",
            "params": {
                "entity": "timetrack\\TimeEntry",
                "transition": "validate",
                "ids": []
            },
            "visible": [
                ["state", "<>", "draft"],
                ["status", "=", "ready"]
            ]
        },
        {
            "id": "action.transition.refuse",
            "label": "Refuse",
            "controller": "model_transition",
            "params": {
                "entity": "timetrack\\TimeEntry",
                "transition": "refuse",
                "ids": []
            },
            "visible": [
                ["state", "<>", "draft"],
                ["status", "=", "ready"]
            ]
        },
        {
            "id": "action.transition.bill",
            "label": "Bill",
            "controller": "model_transition",
            "params": {
                "entity": "timetrack\\TimeEntry",
                "transition": "bill",
                "ids": []
            },
            "visible": [
                ["state", "<>", "draft"],
                ["status", "=", "validated"],
                ["is_billable", "=", true]
            ]
        }
    ],
    "header": {
        "actions": {
            "ACTION.SAVE": [
                { "id": "SAVE_AND_VIEW" }
            ]
        }
    },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Short description",
                                                "value": "description",
                                                "width": "100%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "0%",
                                                "visible": false
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Performed by",
                                                "value": "user_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer",
                                                "value": "customer_id",
                                                "width": "50%",
                                                "visible": ["project_id", "<>", null]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.details",
                        "label": "Details",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Origin",
                                                "value": "origin",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Reference",
                                                "value": "reference",
                                                "width": "66%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Ticket ID",
                                                "value": "ticket_id",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Ticket link",
                                                "value": "ticket_link",
                                                "width": "75%",
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "label": "Date",
                                                "value": "date",
                                                "width": "33%",
                                                "widget": {
                                                    "usage": "date/plain"
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Full day",
                                                "value": "is_full_day",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Start",
                                                "value": "time_start",
                                                "width": "16%",
                                                "visible": ["is_full_day", "=", false]
                                            },
                                            {
                                                "type": "field",
                                                "label": "End",
                                                "value": "time_end",
                                                "width": "16%",
                                                "visible": ["is_full_day", "=", false]
                                            }
                                        ]
                                    },
                                    {
                                        "width": "25%"
                                    },
                                    {
                                        "width": "25%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Project",
                                                "value": "project_id",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Total duration",
                                                "value": "duration",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Total duration",
                                                "value": "billable_duration",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "detailed_description",
                                                "label": "Description",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.sale",
                        "label": "Sale",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "product_id",
                                                "label": "Product (Catalog)",
                                                "width": "75%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "price_id",
                                                "label": "Price",
                                                "width": "50%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "unit_price",
                                                "label": "Unit price",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "qty",
                                                "width": "25%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "is_billable",
                                                "label": "is Billable",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "has_receivable",
                                                "label": "Has Receivable",
                                                "readonly": true,
                                                "width": "25%",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "value": "receivable_id",
                                                "label": "Receivable",
                                                "readonly": true,
                                                "width": "50%",
                                                "visible": ["has_receivable", "=", true]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
