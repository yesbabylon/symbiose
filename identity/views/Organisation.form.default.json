                                            {
                                                "type": "field",
                                                "value": "address_zip",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_state",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_country",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Banks Accounts",
                        "id": "section.organisation_banksaccounts",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "bank_account_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
