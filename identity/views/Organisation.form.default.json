{
    "name": "Organisation",
    "description": "Form holding basic information about an Organisation.",
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "legal_name",
                                                "width": "100%",
                                                "widget": {
                                                    "header": false
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "short_name",
                                                "width": "100%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "16%",
                                        "items": []
                                    },
                                    {
                                        "width": "33%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "type_id",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false,
                                                            "ACTION.OPEN": false
                                                        }
                                                    }
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "identity_id",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "type",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_parent",
                                                "visible": false
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.identity_info",
