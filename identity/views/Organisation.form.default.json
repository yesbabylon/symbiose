                                            {
                                                "type": "field",
                                                "label": "Language",
                                                "value": "lang_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_vat",
                                                "width": "50%",
                                                "label": "Subject to VAT",
                                                "help": "Do the company have a VAT number?"
                                            },
                                            {
                                                "type": "field",
                                                "value": "vat_number",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "bank_account_iban",
