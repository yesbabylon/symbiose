{
    "name": "Invoices",
    "description": "This view is intended for displaying the invoices.",
    "access": {
        "groups": ["finance.default.users"]
    },
    "controller": "finance_accounting_invoice-collect",
    "header": {
        "actions": {
            "ACTION.CREATE": false
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "id",
                "width": "10%"
            },
            {
                "id": "item.name",
                "type": "field",
                "value": "name",
                "width": "20%"
            },
            {
                "id": "item.emission.date",
                "type": "field",
                "value": "emission_date",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "status",
                "width": "20%"
            },
            {
                "id": "item.invoice_purpose",
                "type": "field",
                "value": "invoice_purpose",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "price",
                "width": "15%"
            }
        ]
    }
}